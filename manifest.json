    "start_url": "/",
    "display": "standalone",
    "orientation": "any",
    "theme_color": "#000000",
    "background_color": "#000000",
    "scope": "/",
    "icons": [
        {
            "src": "data:image/svg+xml;base64,",
            "sizes": "192x192",
